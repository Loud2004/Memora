<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/card_background"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="0dp"
    android:paddingBottom="4dp"
    android:baselineAligned="false" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="7"
        android:layout_gravity="center_vertical" >

        <TextView android:id="@+id/categoryName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-2dp"
            android:textSize="26sp"
            android:textStyle="bold"
            android:text="@string/category_name" />

        <TextView android:id="@+id/categoryDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:textSize="12sp"
            android:textColor="#444"
            android:text="@string/category_desc" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="2"
        android:layout_gravity="center_vertical" >

        <TextView android:id="@+id/numOfWords"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-10dp"
            android:gravity="center"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/criticalColor"
            android:text="@string/num_of_words"/>

        <TextView
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/list_item_words"/>

    </LinearLayout>

    <com.timothyshaffer.memora.view.NavArrowView
        android:layout_width="0dp"
        android:layout_height="22dp"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        app:arrowDirection="Right"
        app:arrowColor="@color/white"
        app:circleColor="#444"
        app:fillCircle="true"/>

</LinearLayout>
