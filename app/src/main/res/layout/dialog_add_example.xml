<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="16dp">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/add_example_input_layout_spa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">
        <EditText
            android:id="@+id/add_example_spa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/add_example_spa_hint" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/add_example_input_layout_eng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">
        <EditText
            android:id="@+id/add_example_eng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/add_example_eng_hint" />
    </android.support.design.widget.TextInputLayout>

</LinearLayout>